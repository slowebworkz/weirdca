root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true

# Markdown: trailing spaces are intentional line breaks
[*.md]
trim_trailing_whitespace = false

# Shell scripts used by Husky hooks
[*.sh]
end_of_line = lf

# Binary and generated assets â€” no formatting
[*.{ico,woff,woff2,png,jpg,jpeg,gif,webp}]
charset = unset
end_of_line = unset
indent_style = unset
trim_trailing_whitespace = false
insert_final_newline = false
