{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Next.js Dev Server",
      "type": "process",
      "command": "pnpm",
      "args": ["turbo", "dev", "--filter=web"],
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false
      }
    },
    {
      "label": "Kill Dev Server",
      "type": "shell",
      "command": "lsof -ti :3000 | xargs kill",
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent",
        "panel": "shared",
        "close": true
      }
    }
  ]
}
