{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "paths": {
      "@scraper/*": ["./src/*"],
      "@scraper/parsers": ["./src/parsers/index.ts"],
      "@scraper/parsers/*": ["./src/parsers/*"],
      "@scraper/utils": ["./src/utils/index.ts"],
      "@scraper/utils/*": ["./src/utils/*"]
    }
  },
  "include": ["src", "tests"]
}
